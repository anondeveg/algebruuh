std::string lower(std::string data) {

  std::transform(data.begin(), data.end(), data.begin(),
                 [](unsigned char c) { return std::tolower(c); });

  return data;
}

bool isOperator(char x) {
  switch (x) {
  case '+':
    return true;
  case '-':
    return true;
  case '*':
    return true;
  case '/':
    return true;
  default:
    return false;
  }
}
std::string solveParabola(std::string equation) {
  // 3y^2 + 8y + 3x + 100
  std::string varTerm1, varTerm2, varTerm3, term4;
  int numberOfTerm = 1;
  for (char x : equation) {
    if (!isOperator(x)) {
      switch (numberOfTerm) {
      case 1:
        varTerm1 += x;
        break;
      case 2:
        varTerm2 += x;
        break;
      case 3:
        varTerm3 += x;
        break;
      case 4:
        term4 += x;
        break;
      }
    } else {
      numberOfTerm += 1;
    }
  }
  std::string eq =
      varTerm1 + " " + varTerm2 + " " + varTerm3 + " " + term4 + "\n";
  std::string sepy =
      varTerm1 + "+" + varTerm2 + "=" + "-" + varTerm3 + "-" + term4;
  std::cout << eq;
  std::cout << sepy;

  return "";
}
std::string conicSolver(std::string equation) {
  if (!(in(equation, "x^"))) {
    solveParabola(equation);
  }
  return "";
}

int main() {
  std::string equation;
  std::cout << "you can input the equation using these "
               "symbols:\n\n\t+\t:addition\n\t-\t:subtraction\n\t*\t:"
               "multiplication\n\t^\t:power\n\n";
  std::cout << "Equation: ";
  // std::cin >> equation;
  equation = "3y^2 + 8y + 3x + 100";
  conicSolver(equation);
}
