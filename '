#include <bits/stdc++.h>
#include <cctype>
#include <iostream>
#include <string>

struct Term {
  double coefficient;
  std::string variable;
  int power = 1;
};

int getTermVariableIndex(std::string strTerm, int index = 0) {
  while (isdigit(strTerm[index])) {
    index++;
  }
  return index;
}

